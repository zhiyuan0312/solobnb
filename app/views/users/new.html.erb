<div class="container-fluid">
    <div class="login_form">
        <h1>Sign up</h1>
        <%= simple_form_for @user do |f| %>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
            <%= f.input :avatar, as: :file, label: "Profile Picture" %>
            <%= f.button :submit %>
        <% end %>
    </div>
</div>